
<div class="panel panel-default">
  <div class="panel-body">
    <h1>Rotten Mangoes</h1>
  </div>
</div>

<%= link_to "Submit a movie!", new_movie_path, :class => "btn btn-success" %>
<hr>

<div id="main_div">

<%= form_tag(nil, method: 'get') do %>
  <p><%= text_field_tag(:title_q, nil, {placeholder: 'Search By title'}) %>
  <%= text_field_tag(:director_q, nil, {placeholder: 'Search by director'}) %>
  <%= select_tag(:duration_q, "<option> </option><option value="">Under 90 minutes</option><option>Between 90 and 120 minutes</option><option>Over 120 minutes</option>".html_safe) %>
  <%= submit_tag('Search') %></p>
<% end %>


<% @movies.each do |movie| %>

<div class="panel panel-default" style="width:400px">
  <div class="panel-heading"><h3><%= link_to movie.title, movie_path(movie) %></h3></div>
  <div class="panel-body">
	<%= image_tag movie.image, :style => "width:200px; Hieght:120px" %>

	<h3><%= formatted_date(movie.release_date) %></h3>
	<h4>Dir. <%= movie.director %> | <%= movie.runtime_in_minutes %> minutes</h4>
	<p><%= movie.description %></p>
	
  </div>
</div>

<% end %>

</div>
