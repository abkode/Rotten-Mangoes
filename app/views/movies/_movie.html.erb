<% @movies.each do |movie| %>

<div class="panel panel-default" style="width:400px">
  <div class="panel-heading"><h3><%= link_to movie.title, movie_path(movie) %></h3></div>
  <div class="panel-body">
	<%= image_tag movie.image, :style => "width:200px; Hieght:120px" %>

	<h3><%= formatted_date(movie.release_date) %></h3>
	<h4>Dir. <%= movie.director %> | <%= movie.runtime_in_minutes %> minutes</h4>
	<p><%= movie.description %></p>
	
  </div>
</div>

<% end %>